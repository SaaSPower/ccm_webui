{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./built/",
        "sourceMap": true,
        "noImplicitReturns": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es5",
            "es6",
            "es2015.promise"
        ],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}